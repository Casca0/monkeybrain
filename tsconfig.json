{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2022",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"incremental": true,
		"paths": {
			"#bot/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["**/node_modules", "**/.*/"]
}
